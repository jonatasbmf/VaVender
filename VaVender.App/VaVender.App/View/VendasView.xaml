<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VaVender.App.View.VendasView"
             IconImageSource="draft_line">
    <ContentPage.Content>

        <FlexLayout 
            
            Direction="Column"
            HorizontalOptions="Center" 
            VerticalOptions="Center">

            <SearchBar Placeholder="Insira o nome do cliente..." />
            <Frame HeightRequest="20" Margin="0" BackgroundColor="DarkBlue">
                <Label Text="Lista de Vendas" HorizontalOptions="CenterAndExpand"/>
            </Frame>

            <ListView x:Name="listview" SeparatorColor="White">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Nome}"
                          TextColor="Yellow"
                          DetailColor="Silver"
                          />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Nova Venda"/>
        </FlexLayout>
            
    </ContentPage.Content>
</ContentPage>